---
import { Image } from 'astro:assets';
import giftcardImage from '../assets/images/general/giftcard.jpg';
import { giftCardContent } from '../data/content';
---

<section id="giftcard" class="py-20 bg-primary">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Content -->
      <div class="text-secondary">
        <h2 class="text-3xl lg:text-4xl font-light tracking-wide mb-8">
          {giftCardContent.title}
        </h2>

        {giftCardContent.paragraphs.map((paragraph, index) => (
          <p class:list={[
            "text-base lg:text-lg leading-relaxed text-secondary/90",
            index < giftCardContent.paragraphs.length - 1 ? "mb-6" : "mb-8"
          ]} set:html={typeof paragraph === 'string' ? paragraph : paragraph.text} />
        ))}

        <a
          href="#contacto"
          class="inline-block px-8 py-3 border border-secondary text-secondary text-sm tracking-widest uppercase hover:bg-secondary hover:text-primary transition-all duration-300"
        >
          {giftCardContent.cta}
        </a>
      </div>

      <!-- Image -->
      <div class="relative">
        <Image
          src={giftcardImage}
          alt={giftCardContent.imageAlt}
          class="w-full h-auto shadow-lg"
        />
      </div>
    </div>
  </div>
</section>
