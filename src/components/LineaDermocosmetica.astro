---
import { Image } from 'astro:assets';
import cosmeticaImage from '../assets/images/general/cosmetica.jpg';
import { dermocosmeticaContent } from '../data/content';
---

<section id="dermocosmetica" class="py-20 bg-cream">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Image -->
      <div class="relative">
        <Image
          src={cosmeticaImage}
          alt={dermocosmeticaContent.imageAlt}
          class="w-full h-auto shadow-lg"
        />
      </div>

      <!-- Content -->
      <div class="text-navy">
        <h2 class="text-3xl lg:text-4xl font-light tracking-wide mb-8 text-primary">
          {dermocosmeticaContent.title}
        </h2>

        {dermocosmeticaContent.paragraphs.map((paragraph, index) => (
          <p class:list={[
            "text-base lg:text-lg leading-relaxed",
            index < dermocosmeticaContent.paragraphs.length - 1 ? "mb-6" : "mb-8"
          ]} set:html={typeof paragraph === 'string' ? paragraph : paragraph.text} />
        ))}

        <a
          href="#contacto"
          id="dermocosmetica-cta"
          class="inline-block px-8 py-3 bg-primary text-secondary text-sm tracking-widest uppercase hover:bg-primary-dark transition-all duration-300"
        >
          {dermocosmeticaContent.cta}
        </a>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  document.getElementById("dermocosmetica-cta")?.addEventListener("click", () => {
    window.posthog?.capture("cta_clicked", {
      cta_text: "Más Información",
      section: "dermocosmetica",
      destination: "#contacto",
    });
  });
</script>
