---
import { Image } from "astro:assets";
import doctorImage from "../assets/images/general/doctora.jpg";
import { doctorContent } from "../data/content";
---

<section id="doctora" class="py-20 bg-cream">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Content -->
      <div class="text-navy order-2 lg:order-1">
        <h2
          class="text-3xl lg:text-4xl font-light tracking-wide mb-8 text-primary"
        >
          {doctorContent.title}
        </h2>

        {doctorContent.paragraphs.map((paragraph, index) => (
          <p class:list={[
            "text-base lg:text-lg leading-relaxed",
            index < doctorContent.paragraphs.length - 1 ? "mb-6" : ""
          ]} set:html={typeof paragraph === 'string' ? paragraph : paragraph.text} />
        ))}
      </div>

      <!-- Image -->
      <div class="relative order-1 lg:order-2">
        <Image
          src={doctorImage}
          alt={doctorContent.imageAlt}
          class="w-full h-auto shadow-lg"
        />
      </div>
    </div>
  </div>
</section>
