---
import { Image } from "astro:assets";
import cosmeticaImage from "../assets/images/general/asesoramiento-medico-estetico.jpg";
import { asesoramientoContent } from "../data/content";
---

<section id="asesoramiento" class="py-20 bg-light-lavender">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Image -->
      <div class="relative">
        <Image
          src={cosmeticaImage}
          alt={asesoramientoContent.imageAlt}
          class="w-full h-auto shadow-lg"
        />
      </div>

      <!-- Content -->
      <div class="text-navy">
        <h2
          class="text-3xl lg:text-4xl font-light tracking-wide mb-8 text-primary"
        >
          {asesoramientoContent.title}
        </h2>

        {asesoramientoContent.paragraphs.map((paragraph) => (
          <p class="text-base lg:text-lg leading-relaxed mb-6" set:html={typeof paragraph === 'string' ? paragraph : paragraph.text} />
        ))}

        <div class="mt-8 p-6 bg-secondary/50 border-l-4 border-primary">
          <h3 class="text-lg font-medium text-primary mb-3">
            {asesoramientoContent.processTitle}
          </h3>
          <ul class="space-y-2 text-base">
            {asesoramientoContent.processItems.map((item) => (
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">â€¢</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
