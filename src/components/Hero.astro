<section
  id="inicio"
  class="min-h-screen bg-primary flex items-center justify-center pt-20"
>
  <div class="text-center px-6 py-16 max-w-4xl mx-auto">
    <!-- Logo -->
    <h1
      class="text-secondary text-5xl md:text-7xl lg:text-8xl tracking-[0.15em] font-light mb-6"
    >
      BENZONI<sup class="text-xl md:text-2xl align-top">®</sup>
    </h1>

    <!-- Decorative Line -->
    <div class="w-full max-w-md mx-auto h-px bg-secondary/50 mb-8"></div>

    <!-- Subtitle -->
    <p
      class="text-secondary text-lg md:text-xl lg:text-2xl tracking-widest font-light mb-4 uppercase"
    >
      Consultorio Médico Estético & Bienestar
    </p>

    <!-- Tagline -->
    <p
      class="text-secondary/90 text-base md:text-lg font-light tracking-wide mb-4 uppercase"
    >
      Cuidado integral para la mujer actual
    </p>

    <p class="text-secondary/80 text-sm md:text-base font-light italic">
      Donde la ciencia, la tecnología y el bienestar se encuentran
    </p>

    <!-- CTA Button -->
    <div class="mt-12">
      <a
        href="#contacto"
        class="inline-block px-8 py-3 border border-secondary text-secondary text-sm tracking-widest uppercase hover:bg-secondary hover:text-primary transition-all duration-300"
      >
        Agendar Consulta
      </a>
    </div>
  </div>
</section>
