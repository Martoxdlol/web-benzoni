---
import { brandInfo, heroContent } from '../data/content';
---

<section
  id="inicio"
  class="min-h-screen bg-primary flex items-center justify-center pt-20"
>
  <div class="text-center px-6 py-16 max-w-4xl mx-auto">
    <!-- Logo + Decorative Line -->
    <div class="inline-flex flex-col items-center mb-8">
      <h1
        class="text-secondary text-5xl min-[380px]:text-6xl min-[570px]:text-7xl md:text-9xl lg:text-[8rem] tracking-[0.15em] font-light mb-6"
      >
        {brandInfo.name}<sup class="text-lg min-[380px]:text-xl md:text-2xl align-top"
          >{brandInfo.trademark}</sup
        >
      </h1>
      <div class="w-full h-px bg-secondary/50"></div>
    </div>

    <!-- Subtitle -->
    <p
      class="text-secondary text-lg md:text-xl lg:text-2xl tracking-widest font-light mb-4 uppercase text-balance"
    >
      {heroContent.subtitle}
    </p>

    <!-- Taglines -->
    {heroContent.taglines.map((tagline) => (
      <p
        class="text-secondary/90 text-base md:text-lg font-light tracking-wide mb-4 uppercase text-balance px-6"
      >
        {tagline}
      </p>
    ))}

    <!-- CTA Button -->
    <div class="mt-12">
      <a
        href="#contacto"
        id="hero-cta"
        class="inline-block px-8 py-3 border border-secondary text-secondary text-sm tracking-widest uppercase hover:bg-secondary hover:text-primary transition-all duration-300"
      >
        {heroContent.cta}
      </a>
    </div>
  </div>
</section>

<script is:inline>
  document.getElementById("hero-cta")?.addEventListener("click", () => {
    window.posthog?.capture("cta_clicked", {
      cta_text: "Agendar Consulta",
      section: "hero",
      destination: "#contacto",
    });
  });
</script>
