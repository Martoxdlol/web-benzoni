---
import { Image } from 'astro:assets';
import recepcionImage from '../assets/images/general/recepcion.jpg';
import { aboutContent } from '../data/content';
---

<section id="nosotros" class="py-20 bg-secondary">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Image -->
      <div class="relative">
        <Image
          src={recepcionImage}
          alt={aboutContent.imageAlt}
          class="w-full h-auto shadow-lg"
        />
      </div>

      <!-- Content -->
      <div class="text-navy">
        {aboutContent.paragraphs.map((paragraph, index) => (
          <p class:list={[
            "text-base lg:text-lg leading-relaxed",
            index < aboutContent.paragraphs.length - 1 ? "mb-6" : ""
          ]} set:html={typeof paragraph === 'string' ? paragraph : paragraph.text} />
        ))}
      </div>
    </div>
  </div>
</section>
